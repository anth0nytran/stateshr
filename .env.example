# Public (client + server)
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_OR_PUBLISHABLE_KEY"

# Server-only (never expose to client)
SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_ROLE_KEY"

# OCR (Google Vision)
# Use a full service account JSON object as a single-line string.
GOOGLE_VISION_CREDENTIALS_JSON='{"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"..."}'
# OCR_PROVIDER can be "google" or "mock"
OCR_PROVIDER="google"

# OpenAI (LLM parsing)
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
OPENAI_MODEL="gpt-4o-mini"

# Google Sheets sync (Service Account)
GOOGLE_SHEETS_CREDENTIALS_JSON='{"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"..."}'
GOOGLE_SHEETS_SPREADSHEET_ID="YOUR_SPREADSHEET_ID"
GOOGLE_SHEETS_TAB_NAME="Leads"

# Optional: protect /api/sheets/sync with a shared secret
# If set, the client UI will NOT include this token (no auth in MVP); use curl/Postman with header x-sync-token.
# SHEETS_SYNC_TOKEN="set-a-random-string"

# Optional: deterministic demo extraction (bypasses Google Vision + OpenAI)
# NEXT_PUBLIC_DEMO_MODE="1"
